<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/camera"/>
        <TextView
            android:id="@+id/dialog_tv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:text="Image"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/video"/>
        <TextView
            android:id="@+id/dialog_tv_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:text="Video"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/audio"/>
        <TextView
            android:id="@+id/dialog_tv_audio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:text="Audio"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_importance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/msg_Imp"
        android:textAlignment="center"
        android:inputType="number"
        android:elegantTextHeight="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_destination"
        android:inputType="number"
        android:hint="@string/destination"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discard"
            android:id="@+id/dialog_discard"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/submit" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:id="@+id/dialog_save"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
</RelativeLayout>

</LinearLayout>